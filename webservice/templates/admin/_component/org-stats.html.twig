<div{{ attributes }} data-poll="delay(180000)|$render">
<div class="d-flex mx-0" style="gap: 1rem">
    <div class="col">
      <div class="card">
        <div class="card-header">Groups</div>
        <div class="card-body fw-bold fs-2 text-center">
                {{computed.groupCount}}
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-header">Roles</div>
        <div class="card-body fw-bold fs-2 text-center">
                {{computed.roleCount}}
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-header">People</div>
        <div class="card-body fw-bold fs-2 text-center">
                {{computed.peopleCount}}
        </div>
      </div>
    </div>
</div>
</div>
